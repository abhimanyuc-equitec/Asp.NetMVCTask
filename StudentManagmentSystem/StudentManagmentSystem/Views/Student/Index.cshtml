@model IEnumerable<StudentManagmentSystem.Models.StudentModel>
<script src=https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@{
    ViewBag.Title = "Student Management Crud";
}
@{
    if (TempData["Deleted"] != null)
    {
        string message = TempData["Deleted"].ToString();
        <script type="text/javascript">
            alert('@message');
        </script>
    }

    if (TempData["Restored"] != null)
    {
        string msg = TempData["Restored"].ToString();
        <script type="text/javascript">
         alert('@msg');
        </script>
    }
    if (TempData["Updated"] != null)
    {
        string UpdateMsg = TempData["Updated"].ToString();
        <script type="text/javascript">
     alert('@UpdateMsg');
        </script>
    }
    if (TempData["Inserted"] != null)
    {
        string InsertedMsg = TempData["Inserted"].ToString();
        <script type="text/javascript">
            alert('@InsertedMsg');
        </script>
    }
}
@{
    int currentCount = ViewBag.StartingCount;
}
<h2>Student Management Crud</h2>

<div class="d-flex justify-content-lg-end mb-2">
    <a href="@Url.Action("InsertData")" class="btn btn-primary mx-1 rounded-pill shadow-sm">Create Data</a>
    <a href="@Url.Action("DeletedData")" class="btn btn-secondary mx-2 rounded-pill shadow-sm">Deleted</a>
    <button id="Print" class="btn btn-warning mx-1 rounded-pill shadow-sm">Print</button>
    <button id="Download" class="btn btn-danger mx-1 rounded-pill shadow-sm">Download Excel</button>

</div>


<div>
    <table class="table table-bordered table-striped" id="Table">
        <tr>
            <th>
                @Html.DisplayName("SRNo")

            <th>
                @Html.DisplayNameFor(model => model.RollNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNo)
            </th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @currentCount
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RollNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                    @{
                        var age = DateTime.Now.Year - item.DOB.Year;
                    }
                    @age
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNo)
                </td>
                @*<td>
                    @Html.ActionLink("Edit", "Edit", new { Id = item.Id }) |
                    @Html.ActionLink("View", "ViewData", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteData", new { id = item.Id })
                </td>*@

                <td>
                    <button class="btn btn-link" onclick="window.location.href='@Url.Action("Edit", new { Id = item.Id })'">
                        <i class="fa fa-edit" style="font-size:25px;"></i>
                    </button>
                    <button class="btn btn-link" onclick="window.location.href='@Url.Action("ViewData", new { Id = item.Id })'">
                        <i class="fa fa-eye" style="font-size:20px;"></i>
                    </button>
                    <button class="btn btn-link" onclick="window.location.href='@Url.Action("DeleteData", new { Id = item.Id })'">
                        <i class="fa fa-remove" style="font-size:25px;"></i>
                    </button>
                </td>
            
                    @{
                        currentCount++;
                    }
            </tr>
        }

    </table>
</div>
@section Scripts {

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>

    <script>
        $("#Print").click(function () {
            var pData = document.getElementById('Table').outerHTML;
            var ogData = document.body.innerHTML;

            document.body.innerHTML = "<h2>Student List</h2>" + pData;
            window.print();
            document.body.innerHTML = ogData;
            location.reload();
        });

        $("#Download").click(function () {
            var tData = document.getElementById('Table');
            var workbook = XLSX.utils.table_to_book(tData, { sheet: "Students" });
            XLSX.writeFile(workbook, 'Students.xlsx');
        });
    </script>
}


<div class="d-flex justify-content-lg-end mt-4">
    @if (ViewBag.CurrentPage > 1)
    {
        <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1 })" class="btn btn-secondary mx-2">Previous</a>
    }

    @for (int i = 1; i <= ViewBag.TotalPages; i++)
    {
        <a href="@Url.Action("Index", new { page = i })" class="btn btn-outline-primary mx-1">@i</a>
    }

    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
    {
        <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1 })" class="btn btn-secondary mx-2">Next</a>
    }
</div>